@using ResumeAnalyzer.ViewModels;
@model VerifyEmailVM;
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="account-box">
       
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                         alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form asp-action="VerifyEmail" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-dang">
                                            </div>

                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                <span class="h1 fw-bold mb-0">Verify Email</span>
                                            </div>                                       

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <input asp-for="Email" type="email" id="form2Example17" class="form-control form-control-lg" />
                                                <label asp-for="Email" class="form-label" for="form2Example17">Email address</label>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>                                     


                                            <div class="pt-1 mb-4">
                                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Verify Email</button>
                                            </div>    
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                                Already have an account? <a asp-action="Login" asp-controller="Account"
                                                                            style="color: #393f81;">Go to Login</a>
                                            </p>
                                         
                                            <a href="#!" class="small text-muted">Terms of use.</a>
                                            <a href="#!" class="small text-muted">Privacy policy</a>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}