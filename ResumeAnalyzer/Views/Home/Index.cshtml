@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/landingpage.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container">

    <div class="text-center mt-5 mb-5">
        <h2>Discover Your Resume's True Potential</h2>
        <p class="text-muted">Upload your resume and see how well it matches your dream job</p>
    </div>
    <div class="container landing-container">

        <div class="landing-card">
            <!-- Left animated side -->
            <div class="landing-left">
                <div class="blob"></div>
                <div class="blob"></div>
                <div class="blob"></div>
            </div>

            <!-- Right text side -->
            <div class="landing-right">
                <h1 class="mb-4 welcome">Welcome to  <span class="gradient-text">Resume Analyzer</span></h1>
                <p class="mb-4">
                    Upload your resume and instantly see how well it matches the job description. Improve your chances of landing your dream job with precise match scores.
                </p>
                <div class="text-center">
                    @* <button class="btn btn-outline-primary landing-button" asp-controller="Account" asp-action="Login">Analyze</button> *@
                    <a class=" btn btn-outline-primary landing-button" asp-controller="Account" asp-action="Login">Analyze</a>

                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>





